<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".businessDetails"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Set your POS Settings"
        android:textAlignment="center"
        android:textSize="23sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="70dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Tell us how you want to use  your POS"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="60dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="Costumer's name is optional during checkout"
                android:id="@+id/etBusinessName"
                android:background="@drawable/border"
                android:layout_gravity="start"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"/>

            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:id="@+id/switchbtn1"
                android:thumb="@drawable/thumb"
                app:track="@drawable/track"
                app:showText="true"
                android:textOn="on"
                android:textOff="off"/>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Costumer's name is optional during checkout"
            android:id="@+id/etUse"
            android:background="@drawable/border"
            android:layout_gravity="start"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"/>
        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:id="@+id/switchbtn2"
            android:thumb="@drawable/thumb"
            app:track="@drawable/track"
            app:showText="true"
            android:textOn="on"
            android:textOff="off"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
            <TextView
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="Do you accept partial payments?"
                android:background="@drawable/border"
                android:layout_gravity="start"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:padding="10dp"/>
        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:id="@+id/switchbtn3"
            android:thumb="@drawable/thumb"
            app:track="@drawable/track"
            app:showText="true"
            android:textOn="on"
            android:textOff="off"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
            <TextView
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="Require PIN in POS"
                android:textStyle="bold"
                android:background="@drawable/border"
                android:layout_gravity="start"
                android:layout_marginLeft="30dp"
                android:padding="10dp"/>

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:id="@+id/switchbtn4"
            android:thumb="@drawable/thumb"
            app:track="@drawable/track"
            app:showText="true"
            android:textOn="on"
            android:textOff="off"/>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Tax"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="55dp"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Service Change"
            android:layout_gravity="end"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="130dp"/>

    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_marginTop="5dp"
    android:gravity="center"
    android:layout_height="wrap_content">


    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_gravity="center"
        android:layout_marginLeft="45dp"
        android:padding="10dp"/>
    <EditText
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_marginLeft="30dp"
        android:padding="10dp"/>

</LinearLayout>


    <Button
        android:id="@+id/btnNext"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/darkgreen"
        android:text="Next"
        android:layout_gravity="center"
        android:textSize="20dp"/>

</LinearLayout>
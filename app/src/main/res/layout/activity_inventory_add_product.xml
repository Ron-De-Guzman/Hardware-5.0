<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/registerbg"
    tools:context=".Inventory_add_product">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_arrow_back_ios_24"
        android:layout_gravity="start"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="80dp"
    android:textSize="30dp"
    android:textColor="@color/darkgreen"
    android:textStyle="bold"
    android:layout_gravity="center_horizontal"
    android:text="Inventory"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="140dp"
        android:text="Product Name"
        android:layout_marginLeft="40dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/etInv_ProductName"
        android:layout_gravity="center_horizontal"
        android:hint="Enter Product Name"
        android:padding="10dp"
        android:layout_marginTop="170dp"
        android:background="@drawable/border"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="230dp"
        android:text="Product Category"
        android:layout_marginLeft="40dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_gravity="center_horizontal"
        android:hint="@string/select"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <AutoCompleteTextView
            android:id="@+id/autoComplete_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"/>

    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="330dp"
        android:text="Unit of Measure"
        android:layout_marginLeft="40dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="430dp"
        android:text="Price"
        android:layout_marginLeft="40dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="430dp"
        android:text="Quantity"
        android:layout_marginLeft="100dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:id="@+id/etInv_Product_price"
        android:layout_gravity="start"
        android:hint="Enter Product ID"
        android:padding="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="470dp"
        android:background="@drawable/border"/>
    <EditText
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:id="@+id/etInv_Product_qty"
        android:layout_gravity="start"
        android:hint="Enter Product ID"
        android:padding="10dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="470dp"
        android:background="@drawable/border"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="540dp"
        android:text="Product ID"
        android:layout_marginLeft="40dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:layout_gravity="center_horizontal"
        android:hint="@string/select"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:id="@+id/autoComplete_text2"/>


    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/etInv_Product_ID"
        android:layout_gravity="center_horizontal"
        android:hint="Enter Product ID"
        android:padding="10dp"
        android:layout_marginTop="570dp"
        android:background="@drawable/border"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:backgroundTint="@color/darkgreen"
        android:text="Add Product"
        android:layout_marginTop="640dp"
        android:layout_marginLeft="50dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:id="@+id/buttonAddProduct"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="650dp"
        android:layout_gravity="end"
        android:id="@+id/btnProduct_list"
        android:layout_marginRight="140dp"
        android:src="@drawable/record">

    </ImageView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="50dp"
        android:layout_marginTop="640dp"
        android:textSize="15sp"
        android:id="@+id/etProduct_list"
        android:text="ProductList"
        android:textStyle="bold"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>




